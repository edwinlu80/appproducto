@model appproducto.Models.Producto
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Registrar Producto</h1>

<form asp-controller="Home" asp-action="Consultar">
    <div class="form-group">
        <label asp-for="Nombre" for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" id="Nombre">
    </div>
    <div class="form-group">
        <label asp-for="Precio" for="Precio">Precio</label>
        <input asp-for="Precio" type="number" class="form-control" id="Precio">
    </div>
    <div class="form-group">
        <label asp-for="UnidadMedida" for="UnidadMedida">Unidad de Medida</label>
        <select asp-for="UnidadMedida" name="UnidadMedida" id="UnidadMedida" class="form-control">
            <option value="metros">Metro</option>
            <option value="Litro">Litro</option>
            <option value="Centimetro">Centimetro</option>
            <option value="Otro">Otro</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="store">Guadar</button>

</form>


<h1>@ViewData["Message"]</h1>

<div>
    <h4 class="">Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-primary">
            @Html.DisplayFor(model => model.Nombre)
        </dt>
        <dt class = "col-sm-2 ">
            @Html.DisplayFor(model => model.Precio)
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayFor(model => model.UnidadMedida)
        </dt>   
    </dl>
</div>